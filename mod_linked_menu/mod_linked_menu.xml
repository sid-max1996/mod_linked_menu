<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>Linked Menu</name>
	<author>max1119</author>
	<creationDate>06.02.2018</creationDate>
	<copyright>Copyright(C)</copyright>
	<license>GNU General Public License</license>
	<authorEmail>max1119@yandex.ru</authorEmail>
	<version>3.0.0</version>
	<description>MODE_LINKEDMENU_DESCRIPTION</description>
	<files>
		<filename module="mod_linked_menu">mod_linked_menu.php</filename>
        <filename>helper.php</filename>
		<folder>tmpl</folder>
        <folder>language</folder>
        <folder>assets</folder>
	</files>
	<media folder="assets" destination="mod_linked_menu">
        <folder>css</folder>
    </media>
	<languages>
		<language tag="ru-Ru">language/ru-RU/ru-Ru.mod_linked_menu.ini</language>
		<language tag="ru-Ru">language/ru-RU/ru-Ru.mod_linked_menu.sys.ini</language>
	</languages>
	<config>
	   <fields name="params">
        <fieldset name="basic">
            <field name="menutype" type="menu" label="MODE_LINKEDMENU_FIELD_MENUTYPE_LABEL"
              description="MODE_LINKEDMENU_FIELD_MENUTYPE_DESC"/>
			<field name="class_div" type="text" label="MOD_MENU_DIV_CLASS_LABEL" default="wrapperLinkedList"
				description="wrapperLinkedList по умолчанию"
			/>	
			<field
				name="class_select_div" type="text" label="MOD_MENU_SELECT_CLASS_LABEL_SELECT" default="selectDiv"
				description="selectDiv по умолчанию"
			/>	
			<field
				name="class_select_div_drop" type="text" label="MOD_MENU_SELECT_CLASS_LABEL_DROP_DIV" default="dropcontainer"
				description="dropcontainer по умолчанию"
			/>
			<field
				name="class_select_ul" type="text" label="MOD_MENU_SELECT_CLASS_LABEL_UL" default="ulLinkedList"
				description="ulLinkedList по умолчанию"
			/>	
			<field
			name="title_button" type="text" label="MOD_MENU_SELECT_CLASS_LABEL_BT_TITLE" default="Go"
			description="Надпись на кнопке"
			/>
			<field
				name="class_button" type="text" label="MOD_MENU_SELECT_CLASS_LABEL_BT" default="btLinkMenu"
				description="btLinkMenu по умолчанию"
			/> 
			<field
				name="class_a" type="text" label="MOD_LM_A" default="trigger"
				description="trigger по умолчанию"
			/>	
			<field
				name="class_a_act" type="text" label="MOD_LM_A_ACT" default="activetrigger"
				description="activetrigger по умолчанию"
			/>	
			<field
				name="class_ul" type="text" label="MOD_LM_UL" default="dropdownhidden"
				description="dropdownhidden по умолчанию"
			/>	
			<field
				name="class_ul_act" type="text" label="MOD_LM_UL_ACT" default="dropdownvisible"
				description="dropdownvisible по умолчанию"
			/>	
      </fieldset>
      </fields>
	</config>
</extension>
